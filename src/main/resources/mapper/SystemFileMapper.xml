<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="github.serliunx.varytalk.project.system.mapper.SystemFileMapper">
    <resultMap id="fileResult" type="github.serliunx.varytalk.project.system.entity.SystemFile">
        <result property="id" column="id"/>
        <result property="userId" column="user_id"/>
        <result property="originalName" column="original_name"/>
        <result property="name" column="name"/>
        <result property="path" column="path"/>
        <result property="fileSize" column="file_size"/>
        <result property="createBy" column="create_by"/>
        <result property="createTime" column="create_time"/>
        <result property="updateBy" column="update_by"/>
        <result property="updateTime" column="update_time"/>
        <result property="remark" column="remark"/>
    </resultMap>

    <sql id="file">
        select * from sys_file sf where id > 0
    </sql>
    
    <select id="selectList" parameterType="SystemFile" resultMap="fileResult">
        <include refid="file"/>
        <if test="name != null and name != ''">
            and sf.name like concat('%', #{name}, '%')
        </if>
    </select>
    
    <insert id="insertFile" parameterType="SystemFile" useGeneratedKeys="true" keyProperty="id" keyColumn="id">
        insert into sys_file(id, user_id, original_name, name, path, file_size, create_by, create_time, update_by, update_time, remark)
        values(null, #{userId}, #{originalName}, #{name}, #{path}, #{fileSize}, #{createBy}, sysdate(), null, null, #{remark})
    </insert>
</mapper>